        </wadl:doc>
        <!-- <request>
            <param name="name" style="query" type="xsd:string"
                required="true"><wadl:doc
                            xmlns="http://docbook.org/ns/docbook"
                            xml:lang="EN">The user name.</wadl:doc></param>
