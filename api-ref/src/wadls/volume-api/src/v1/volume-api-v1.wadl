        </response>
    </method>
    <method name="DELETE" id="deleteSnapshot">
        <wadl:doc xmlns="http://docbook.org/ns/docbook" xml:lang="EN"
            title="Delete snapshot">
            <para role="shortdesc">Deletes a specified
                snapshot.</para>
        </wadl:doc>
        <response status="202"/>
    </method>
</application>
